<?xml version="1.0" encoding="UTF-8"?>
<phpunit
         backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         syntaxCheck="false"
         bootstrap="vendor/autoload.php"
>
    <php>
        <var name="DB_DSN" value="mysql:dbname=url_short;host=localhost" />
        <var name="DB_USER" value="root" />
        <var name="DB_PASSWD" value="vagrant" />
        <var name="DB_DBNAME" value="url_short" />
        <server name="APP_ENVIRONMENT" value="development" />
    </php>
    <testsuites>
        <testsuite name="default">
            <directory suffix="Test.php">src/UrlShort/Test/</directory>
            <exclude>src/UrlShort/Test/Base/TestsWithFixture.php</exclude>
        </testsuite>
  </testsuites>  
    
</phpunit>
