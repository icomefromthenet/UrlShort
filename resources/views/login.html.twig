{% extends 'layout.html.twig' %}

{% block sub_title 'User Login - ' %}
{% block body %}
<h2 class="content-subhead">Login</h2>
{{ error|nl2br }}
<form class="pure-form" action="{{ path('user.login_check') }}" method="post">
    <fieldset>
        <legend>Enter your login details here:</legend>

        <input type="email" placeholder="Email" name="_username" value="{{ last_username }}" >
        <input type="password" placeholder="Password" name="_password" value="">

        {% if allowRememberMe %}
        <label for="remember">
            <input id="remember" name="_remember_me" type="checkbox"> Remember me
        </label>
        {% if allowPasswordReset %}
        <label>
            <a  href="{{ path('user.forgot-password') }}">Forgot your password?</a>
        </label>
        {% endif %}
        {% endif %}


    
        <button type="submit" class="pure-button pure-button-primary">Sign in</button>
    </fieldset>
</form>
{% endblock body %}
